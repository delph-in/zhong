slash := meta &
  [ SYNSEM.NON-LOCAL.SLASH 1-dlist &
			   [ LIST < local > ],
    META-PREFIX "/",
    META-SUFFIX "" ].

;; SSH 2014-10-31 for robust parsing 
bridge-unary := label &
  [ SYNSEM.LOCAL.CAT.HEAD bridge-head & [ BRIDGED - ],
    LABEL-NAME "BX" ].

bridge-binary := label &
  [ SYNSEM.LOCAL.CAT.HEAD bridge-head & [ BRIDGED + ],
    LABEL-NAME "BP" ].
