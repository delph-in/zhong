; SSH 2014-10-16: aspectual markers (了, 着, 过)
le-pfv-label := label & 
	    [ STEM <"了">,
	      SYNSEM [ LIGHT +,
		       R-PERIPH na-or--,
		       LOCAL [ CAT.HEAD marker,
			       COORD-STRAT "" ] ],
	      LABEL-NAME "AS" ].

zhe-label := label & 
	    [ STEM <"着">,
	      SYNSEM [ LIGHT +,
		       R-PERIPH na-or--,
		       LOCAL [ CAT.HEAD marker,
			       COORD-STRAT "" ] ],
	      LABEL-NAME "AS" ].

guo-label := label & 
	    [ STEM <"过">,
	      SYNSEM [ LIGHT +,
		       R-PERIPH na-or--,
		       LOCAL [ CAT.HEAD marker,
			       COORD-STRAT "" ] ],
